<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/hekmatCard"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/textSizeMedium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/enterHekmatCardInformationMessage"
            android:textColor="@color/gray"
            android:textSize="@dimen/textSizeSmall" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/hekmatCardNumberEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="@string/hekmatCard16digitNumber"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/textSizeSmall"
            android:inputType="numberSigned"
            app:backgroundTint="@color/gray"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/hekmatCardPasswordEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="@string/hekmatCardPassword"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/textSizeSmall"
            android:inputType="textPassword"
            app:backgroundTint="@color/gray"/>

        <TextView
            android:id="@+id/enterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/textSizeSmall"
            android:text="@string/submitAndEnter"/>

    </LinearLayout>

</android.support.v7.widget.CardView>