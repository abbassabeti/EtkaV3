<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:resizeableActivity">false</item>

    </style>

    <style name="AppTheme.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.SolidSystemBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.SolidSystemBar.Light">
        <item name="android:statusBarColor">#C3C5C6</item>
        <item name="android:navigationBarColor">#C3C5C6</item>
    </style>

    <style name="AppTheme.SolidSystemBar.WhiteParentStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--Layout styles-->

    <style name="commonLayoutRootStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/mainBackgroundColor</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="commonLayoutRootStyle.themeColor">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="editTextHolderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="grayLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="textButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="loginRegisterEditTextLayoutStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="loginRegisterEditTextStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="loginRegisterSpinnerStyle">
        <item name="android:background">@null</item>
    </style>

    <style name="whiteLoginRegisterButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:paddingLeft">80dp</item>
        <item name="android:paddingRight">80dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/rect_round4dp_white</item>
    </style>

    <style name="loginRegisterTextsStyle">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="profileMenuDividerViewStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lightGray</item>
        <item name="android:layout_marginRight">48dp</item>
    </style>

    <style name="lightDividerMatchWidthStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="themeColorSwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="tabStripTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="dialogCardStyle">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="linearProgressStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">multiply</item>
        <item name="android:progressBackgroundTint">@color/colorPrimary</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="circularProgressStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_screen_layer</item>
    </style>

</resources>
